using Gtk;

public class Contacts.HoverImage : Image  {

  public HoverImage () {
  }

  public override bool draw (Cairo.Context cr) {
    var state = get_state_flags ();
    if ((state & (StateFlags.PRELIGHT | StateFlags.ACTIVE)) != 0)
      base.draw (cr);
    return false;
  }
}
